{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "config": ["./config/config.ts"],
      "@frontend/types/*": ["../../client/src/types/*"],
    },
  },
}
